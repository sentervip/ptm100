<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_layout_background">

    <TextView
        android:id="@+id/baby_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="@string/high_low_name"
        android:textColor="@color/color_title_tx"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/split_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/baby_title"
        android:background="@color/color_split_line" />

    <ListView
        android:id="@+id/list_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/split_line"
        android:cacheColorHint="@null"
        android:divider="@color/color_split_line"
        android:dividerHeight="0.3dp" />
</RelativeLayout>